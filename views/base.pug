doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Teacher Schedule Application
  link(rel='stylesheet' href='../static/styles.css')
  script(src='https://kit.fontawesome.com/4f272c0f0e.js' crossorigin='anonymous')
.home.background
  h1 Welcome to Teacher Schedule Check
  p You are requested to login as admin or a student to perform your task
.container
  .box
    .headings
      i.fa-solid.fa-user-tie
      h2
        u Login As Administrator
    #form
      form(action='/adminpage' method='post')
        input(type='text' name='username' placeholder='Enter your Username')
        input(type='number' name='password' placeholder='Enter your Password')
        button.btn Login
  .box
    .headings
      i.fa-solid.fa-graduation-cap
      h2
        u Login As Student
    #form
      form(action='/studentpage' method='post')
        input(type='text' name='username' placeholder='Enter your Username')
        input(type='passcode' name='password' placeholder='Enter your Password')
        button.btn Login
